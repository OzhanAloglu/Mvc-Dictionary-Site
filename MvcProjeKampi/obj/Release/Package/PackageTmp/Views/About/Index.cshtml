
@using EntityLayer.Concrete
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string status = "";}
@{ string statusButton = "";}

<h2>Hakkımda Veri Listesi</h2>
<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Hakkımda Başlığı</th>
        <th>Aktif Pasif İşlemi</th>

    </tr>

    @foreach (var item in Model)
    {
        if (item.AboutStatus == true)
        {
            status = "Pasif Yap";

        }
        if (item.AboutStatus==false)
        {
            status = "Aktif Yap";
        }
        if (item.AboutStatus==true)
        {
            statusButton = "btn btn-danger";
        }
        if (item.AboutStatus==false)
        {
            statusButton = "btn btn-success";
        }
        <tr>
            <th>@item.AboutID</th>
            <td>@item.AboutDetails1</td>
            <td><a href="/About/AboutStatu/@item.AboutID" class="@statusButton">@status</a></td>

        </tr>
    }


</table>

@Html.Action("AboutPartial", "About")